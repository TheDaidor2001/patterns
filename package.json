{
  "name": "bsa-patterns-hw",
  "version": "0.0.0",
  "description": "Starter for Patterns Practises and Principles homework. Binary Studio Academy",
  "scripts": {
    "lint:client": "eslint \"client/src/**/*.{js,jsx,ts,tsx}\" --config .eslintrc.client.js",
    "lint:server": "eslint \"server/src/**/*.{js,ts}\" --config .eslintrc.server.js",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:fix:client": "eslint \"client/src/**/*.{js,jsx,ts,tsx}\" --config .eslintrc.client.js --fix",
    "lint:fix:server": "eslint \"server/src/**/*.{js,ts}\" --config .eslintrc.server.js --fix",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "format:client": "prettier --write \"client/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:server": "prettier --write \"server/src/**/*.{js,ts,json,md}\"",
    "format": "npm run format:client && npm run format:server"
  },
  "author": "Vitalii Yarmus",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "prettier": "^3.3.3",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@types/ramda": "^0.30.1",
    "ramda": "^0.30.1"
  }
}
